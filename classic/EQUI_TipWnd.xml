	</Label>

	<Button item = "TIP_CloseButton">
		<ScreenID>CloseButton</ScreenID>
		<!--<Font>3</Font>-->
		<RelativePosition>true</RelativePosition>
		<AutoStretch>true</AutoStretch>
		<LeftAnchorOffset>86</LeftAnchorOffset>
		<TopAnchorOffset>34</TopAnchorOffset>
		<RightAnchorOffset>6</RightAnchorOffset>
		<BottomAnchorOffset>10</BottomAnchorOffset>
